@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $.ajax({
            method: "GET",
            url: '@Url.Action("GetIDJSON")',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data.LastID);
                document.getElementById("LastID").innerText = data.LastID;
            },
            error: function (e) {
                console.log(e);
            }
        });

        $.ajax({
            method: "GET",
            url: '@Url.Action("GetLastTopicID")',
            contentType: "text/html",
            success: function (data) {
                console.log(data);
                $("#LastIDFromParial").html(data);
            },
            error: function (e) {
                console.log(e);
            }
        });

    function filltable() {
        $.ajax({
            method: "GET",
            url: '@Url.Action("Index")',
            contentType: "text/html",
            success: function (data) {
                console.log(data);
                $("#TopicsList").html(data);
            },
            error: function (e) {
                console.log(e);
            }
        });
    }
    filltable();
    document.forms[1].onsubmit = function () {
        event.preventDefault();
        var id = document.getElementById("Top_Id").value
        var name = document.getElementById("Top_Name").value
        var data = {
            "Top_Id": id,
            "Top_Name": name
        }
        console.log(data);
        $.ajax({
            method: "POST",
            url: '@Url.Action("Create")',
            dataType: "json",
            data: data,
            //contentType:"application/json",
            success: function (data) {
                //console.log(data)
                filltable();
            },
            error: function (e) {
                console.log(e.message);
        }
        })
    }

    function deleteAjax(id) {
        event.preventDefault();
        var data = { "id": id };
        $.ajax({
            method: "GET",
            url: '/Topic/Delete/' + id,
            success: function () {
                filltable();
            },
            error: function (e) {
                console.log(e.message);
        }
        })
    }
</script>
}
