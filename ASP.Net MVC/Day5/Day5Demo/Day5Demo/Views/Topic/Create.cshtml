@model Day5Demo.Models.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<label id="LastID"></label>
<div id="LastIDFromParial">

</div>

